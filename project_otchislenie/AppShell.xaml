<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="project_otchislenie.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:project_otchislenie"
    Shell.FlyoutBehavior="Flyout"
    Title="project_otchislenie">

    <TabBar> <!--тут для авторизации таббар появится ток кгда будет логин-->
        <Tab Title="Login">
            <ShellContent 
         ContentTemplate="{DataTemplate local:LoginPage}"
         Route="LoginPage" />
        </Tab>
       
    </TabBar>

    <FlyoutItem Title="Home">
        <Tab Title="Просмотр">
            <ShellContent 
                Title="Заявления"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
            <ShellContent
                Title="Студенты"
                ContentTemplate="{DataTemplate local:StudentPage}"
                Route="StudentPage" />
        </Tab>
        <Tab Title="Добавления">
            <ShellContent 
                Title="Заявления"
                ContentTemplate="{DataTemplate local:AddLetterPage}"
                Route="AddLetterPage" />
            <ShellContent
                Title="Студенты"
                ContentTemplate="{DataTemplate local:AddStudentPage}"
                Route="AddStudentPage" />
        </Tab>
    </FlyoutItem>
</Shell>
