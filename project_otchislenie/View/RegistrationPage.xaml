<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="project_otchislenie.RegistrationPage"
             Title="RegistrationPage">
    <VerticalStackLayout>
        <Label Text="Логин:"/>
        <Entry Text="{Binding User.Login}" ClearButtonVisibility="WhileEditing"/>
        <Label Text="Парол:"/>
        <Entry Text="{Binding User.Password}" ClearButtonVisibility="WhileEditing"/>
        <Button Text="Войти" Clicked="EntryButton"/>
    </VerticalStackLayout>
</ContentPage>