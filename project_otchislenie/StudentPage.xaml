<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="project_otchislenie.StudentPage"
             Title="StudentPage">
    <StackLayout>
        <Label  Text="Студенты" HorizontalTextAlignment="Center"/>
        <ListView HeightRequest="80"  ItemsSource="{Binding Students}" SelectedItem="{Binding Student}" VerticalScrollBarVisibility="Always" HorizontalScrollBarVisibility="Always" >
        </ListView>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Text="Изменить"  Clicked="EditStudent"/>
            <Button Grid.Column="1" Text="Удалить"  Clicked="DeleteStudent"/>
        </Grid>
    </StackLayout>
    

</ContentPage>