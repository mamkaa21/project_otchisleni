<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="project_otchislenie.StudentPage"
             Title="StudentPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label  Text="Студенты" Grid.ColumnSpan="3" HorizontalTextAlignment="Center"/>

        <ListView Grid.Row="1" Grid.RowSpan="4" Grid.Column="1" Grid.ColumnSpan="3" ItemsSource="{Binding Student}" SelectedItem="{Binding SelectedStudent}" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.ContextActions>
                            <MenuItem Text="Добавить" Clicked="AddStudent"/>
                            <MenuItem Text="Редактировать" Clicked="EditStudent"/>
                            <MenuItem Text="Удалить" Clicked="DeleteStudent"/>

                        </ViewCell.ContextActions>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>

</ContentPage>