<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="project_otchislenie.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout>
        <Label Text="Логин:"/>
        <Entry Text="{Binding User.Login}"  ClearButtonVisibility="WhileEditing"/>
        <Label Text="Парол:"/>
        <Entry Text="{Binding User.Password}" IsPassword="True" ClearButtonVisibility="WhileEditing"/>
        <Button Text="Войти" Clicked="EntryButton"/>
        <Button Text="Нет аккаунта? Регистрация здесь." BorderColor="White" Background="White" TextColor="Black" Clicked="OpenRegistrationPage"/>
    </VerticalStackLayout>
</ContentPage>